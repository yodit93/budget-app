<div class="row justify-content-center pt-2">
  <div class="col-md-6">
    <div class="form-container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= render partial: 'shared/nav', locals: {
          left: link_to(root_for_non_logged_in_path) { "<i class='fa fa-arrow-left text-white'></i>".html_safe },
          header: 'Register',
          right: f.submit("Next", class: "btn text-light")
        } %>
        <div class="my-3">
          <%= f.text_field :name, class: "form-control", placeholder: 'Full name' %>
        </div>
        <div class="mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Email' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: 'Password' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
